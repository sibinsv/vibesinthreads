{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "clean": "rimraf dist && rimraf node_modules/.cache && rimraf .tsbuildinfo && npm cache clean --force 2>nul || true",
    "fresh": "npm run clean && npm run db:safe-setup && npm run dev",
    "kill": "npx kill-port 5000 2>nul || true",
    "prisma:generate": "node scripts/generate-prisma.js",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:sync": "prisma db push --skip-generate",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed-dev": "ts-node prisma/seed-dev.ts",
    "db:safe-setup": "npm run db:sync && (npm run prisma:generate || echo 'Prisma generation failed, continuing...') && npm run db:seed && npm run db:seed-dev",
    "db:production-setup": "npm run db:sync && (npm run prisma:generate || echo 'Prisma generation failed, continuing...') && npm run db:seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prisma": "^6.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
